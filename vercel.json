{
    "version": 2,
    "builds": [
        {
            "src": "frontend/server/server.js",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "18.x"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "nodeVersion": "18.x"
            }
        }
    ],
    "rewrites": [
        { 
            "source": "/api/(.*)",
            "destination": "/frontend/server/server.js"
        },
        {
            "source": "/static/(.*)",
            "destination": "/build/static/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/build/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; connect-src 'self' https://*.vercel.app; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"
                }
            ]
        },
        {
            "source": "/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
} 