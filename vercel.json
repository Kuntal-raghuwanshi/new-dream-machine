{
    "version": 2,
    "builds": [
        {
            "src": "frontend/server/server.js",
            "use": "@vercel/node",
            "config": {
                "nodeVersion": "18.x"
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "frontend/server/server.js"
        },
        {
            "source": "/health",
            "destination": "frontend/server/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/build/$1"
        }
    ],
    "headers": [
        {
            "source": "/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
} 